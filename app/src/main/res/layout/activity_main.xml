<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F04180"
    android:orientation="vertical"
    tools:context="com.example.wesignn.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Text to Translate"
        android:textColor="#fff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etname"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#F0DDDD"
        android:maxLength="10"
        android:hint="  Enter text here.." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnstore"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:background="#F8F5F5"
            android:text="Translate" />

        <Button
            android:id="@+id/btnget"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#F8F5F5"
            android:text="See video" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvnames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Translated to ASL Signs"
        android:textColor="#fff"
        android:textSize="20sp" />

    <LinearLayout

        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="240dp"
        android:background="@color/white"
        android:orientation="horizontal">

    </LinearLayout>

    <EditText
        android:visibility="gone"
        android:id="@+id/etnama"
        android:layout_width="375dp"
        android:layout_height="190dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#C7B9B9" />

    <Button
        android:id="@+id/btngeta"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="10dp"
        android:background="#F8F5F5"
        android:text="Help" />

</LinearLayout>